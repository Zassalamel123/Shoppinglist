<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/managerListLayout">
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="44dp" app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/createListButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="@string/name_list"
            android:layout_width="249dp"
            android:layout_height="44dp" android:id="@+id/shoppingList1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textAlignment="center"
            app:autoSizeTextType="none" android:ellipsize="none" android:textSize="30sp"
    />
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="44dp" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/editListButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/createListButton"
            app:layout_constraintStart_toEndOf="@+id/shoppingList1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
