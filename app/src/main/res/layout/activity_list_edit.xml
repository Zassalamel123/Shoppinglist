<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ListEditActivity" android:id="@+id/listEditConstraintLayout">
        <TextView
                android:text="Beispiel Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/editTitleList"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textAlignment="center"
                android:autoText="false" app:autoSizeTextType="none" android:textSize="30sp" android:clickable="false"
                android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
